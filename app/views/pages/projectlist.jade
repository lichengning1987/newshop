extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered#j-loglist
                thead
                    tr
                        th 项目名称
                        th 项目内容
                        th 项目负责人
                        th 预计完成时间
                        th 时间
                        th 查看
                        th 修改
                        th 删除
                        th 记录人
                tbody
                    each item in projects
                        tr(class="item-id-#{item._id}")
                           td #{item.name}
                           td #{item.content}
                           td #{item.principal}
                           td #{item.finishtime}
                           td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                           td: a(target="_blank",href="../movie/#{item._id}") 查看
                           td: a(target="_blank",href="../admin/update/#{item._id}") 修改
                           td
                             button.btn.btn-danger.del(type="button",data-id="#{item._id}")  删除
                           td #{item.from.name}
    script(src="/js/admin.js")