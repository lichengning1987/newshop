.container
    .row
        .page-header.clearfix
            h1= title
            .col-md-4
            .col-md-8
                span.input-group-btn.fr
                    button.btn.btn-default(data-toggle="modal",data-target="#sigemodal") 记录
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href="/") 工作日志
        if user
            p.navbar-text.navbar-right
                span 欢迎您，#{user.name}
                span &nbsp;|&nbsp;
                a.navbar-link(href="/logout") 登出
        else
            p.navbar-text.navbar-right
                a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
                span &nbsp;|&nbsp;
                a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST",action="/user/signup")
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signupPassword") 密码
                        input#signupName.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST",action="/user/signin")
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for="signinName") 用户名
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signinPassword") 密码
                        input#signupName.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
#sigemodal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST",action="/user/log")
                .modal-header 记录
                .modal-body
                    if user
                       input(type="hidden",name="project[from]",value="#{user._id}")
                    .form-group
                        label(for="projectName") 项目名称
                        input#projectName.form-control(name="project[name]",type="text")
                    .form-group
                        label(for="projectContent") 项目内容
                        input#projectContent.form-control(name="project[content]",type="text")
                    .form-group
                        label(for="projectPrincipal") 项目负责人
                        input#projectPrincipal.form-control(name="project[principal]",type="text")
                    .form-group
                        label(for="projectTime") 预计完成时间
                        input#projectTime.form-control(name="project[finishtime]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                    button.btn.btn-success#logbtn(type="submit") 提交